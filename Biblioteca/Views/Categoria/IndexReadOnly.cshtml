@model IEnumerable<Biblioteca.Models.Categoria>
    <h1>Categorias</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.Nome)</th>
                <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.Descricao)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
{
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                </tr>
            }
        </tbody>
    </table>

