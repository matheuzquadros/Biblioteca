@model Biblioteca.Models.Book
@{
    ViewBag.Title = "Details";
}


<div class="row row-details">
    <div class="col-sm-8">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th colspan="2">
                        <h4 style="display: inline-block;">Informações do cliente</h4>
                        <button style="display: inline-block;" class="btn btn-primary pull-right" onclick="location.href = '@(Url.Action("Edit", "Book", new { id = Model.Id }))'">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="false"></span>
                        </button>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Titulo):</th>
                    <td>@Html.DisplayFor(model => model.Titulo)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Autor):</th>
                    <td>@Html.DisplayFor(model => model.Autor)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NumeroPaginas):</th>
                    <td>@Html.DisplayFor(model => model.NumeroPaginas)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Categoria.Nome):</th>
                    <td>@Html.DisplayFor(model => model.Categoria.Nome)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NumeroPaginas):</th>
                    <td>@Html.DisplayFor(model => model.NumeroPaginas)</td>
                </tr>


            </tbody>
        </table>
        <button class="btn btn-danger pull-right" onclick="location.href = '@(Url.Action("Remove", "Book", new { id = Model.Id }))'">Excluir</button>
    </div>
</div>


