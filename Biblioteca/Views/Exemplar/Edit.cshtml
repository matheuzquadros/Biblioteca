@model Biblioteca.ViewModels.ExemplarFormViewModel

@using (Html.BeginForm("Save", "Exemplar"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-container">
        <h2>Informações do exemplar</h2>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Exemplar.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Exemplar.Book, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Exemplar.BookId,
                     new SelectList(Model.Books, "Id", "Titulo"),
                        "Selecione o livro", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Exemplar.Id)
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
